<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheNasa" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>
        <item name="activityBackgroundColor">@color/default_first</item>
        <item name="actionBarBackgroundColor">@color/default_app_bar</item>
        <item name="bottomNavigationBackgroundColor">@color/default_second</item>
        <!-- Splash -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.TheNasa.Moon" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>
        <item name="activityBackgroundColor">@color/moon_first</item>
        <item name="actionBarBackgroundColor">@color/moon_second</item>
        <item name="bottomNavigationBackgroundColor">@color/moon_second</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">#CDC5D6</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#F0EFF3</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.TheNasa.Martian" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorSurface">@color/black</item>
        <item name="activityBackgroundColor">@color/martian_first</item>
        <item name="actionBarBackgroundColor">@color/martian_second</item>
        <item name="bottomNavigationBackgroundColor">@color/martian_second</item>
        <item name="android:textColor">@color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFFFFF</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_img</item>
        <!-- Required for animated icons -->
        <!--<item name="windowSplashScreenAnimationDuration">200</item>-->

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.TheNasa</item>
    </style>

</resources>